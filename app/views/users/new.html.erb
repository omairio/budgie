<div class="center-container" id="info">

	<% provide(:title, 'Sign up') %>

	<h1>Sign up</h1>

	<div>
	<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	</div>

	<%= f.text_field :first_name, placeholder: "first name" %>

	<%= f.text_field :last_name, placeholder: "last name" %>


	<%= f.text_field :email, placeholder: "email address: eg@example.com" %>

	<%= f.password_field :password, placeholder: "password" %>

	<%= f.password_field :password_confirmation, placeholder: "enter password again"%>

	<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

	<% end %>

<div id="buttons">
    <%= link_to raw('<button class="btn btn-large" role="button">Back</button>'), root_path, method: "get" %>
</div>

</div>
