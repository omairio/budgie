<% if !@user.nil? and @user.errors.any? %>
<% @form_errors = @user.errors %>
<% elsif !@new_transaction.nil? and @new_transaction.errors.any? %>
<% @form_errors = @new_transaction.errors %>
<% end %>

<% if !@form_errors.nil? and !@form_errors.empty? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@form_errors.count, "error") %>.
    </div>
    <ul>
    <% @form_errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>