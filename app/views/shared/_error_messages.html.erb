<% if !@user.nil? and @user.errors.any? %>
<% @error = @user %>
<% elsif !@transaction.nil? and @transaction.errors.any? %>
<% @error = @transaction %>
<% end %>
<% if !@error.nil? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@error.errors.count, "error") %>.
    </div>
    <ul>
    <% @error.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>