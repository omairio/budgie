<% if !@user.nil? and @user.errors.any? %>
<% @errors = @user.errors %>
<% elsif !@new_transaction.nil? and @new_transaction.errors.any? %>
<% @errors = @new_transaction.errors %>
<% end %>

<% if !@errors.nil? and !@errors.empty? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@errors.count, "error") %>.
    </div>
    <ul>
    <% @errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>