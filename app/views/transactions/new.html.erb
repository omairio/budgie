<div class="center-container right" id="info">

	<% provide(:title, 'Add Transaction') %>

	<h1>New Transaction</h1>

	<%= form_for(@new_transaction) do |f| %>
	<%= render 'shared/error_messages' %>
	<%= f.text_field :amount, placeholder: "amount" %>

	<script>
		$('.input-group.date').datepicker({
			todayBtn: "linked"
		});
	</script>
	<div class='input-group date'>
		<input type="text" id="transaction" data-provide='datepicker' data-date-format="dd/mm/yyyy" value="<%= current_user.date.strftime("%d/%m/%Y") %>"  data-todayBtn="linked" name="transaction[date]">
	</div>


	<%= render 'shared/category_select' %>

	<%= f.text_field :description, placeholder: "description" %>

	<%= f.submit "Enter Transaction", class: "btn btn-large btn-primary" %>

	<% end %>

	<div id="buttons">
		<%= link_to raw('<button class="btn btn-medium" role="button">Cancel</button>'), root_path, method: "get" %>
	</div>

</div>
