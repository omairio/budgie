<div class="center-container right" id="info">

<% provide(:title, 'Add Transaction') %>

<h1>Transactions#new</h1>
<p>Find me in app/views/transactions/new.html.erb</p>

<%= form_for(@transaction) do |f| %>
<%= render 'shared/error_messages' %>
<%= f.text_field :amount, placeholder: "amount" %>

<div class="date" id="transaction_date dp3" data-date="<%= Date.today.strftime("%d-%m-%Y") %>" data-date-format="dd-mm-yyyy">
  <input class="span2" size="16" type="text" value="<%= Date.today.strftime("%d-%m-%Y") %>" name="transaction[date]">
  <span class="add-on"><i class="icon-th"></i></span>
</div>

<br>
 <%= f.text_field :day_spread, placeholder: "day spread" %>
 
<span class="select2-container form-control select select-primary">
<select id="transaction_spread_type" name="transaction[spread_type]">
<option value="Day">Day</option>
<option value="Week">Week</option>
<option value="Month">Month</option>
<option value="Year">Year</option>
</select>
</span>
<br>

<span class="select2-container form-control select select-primary">
<select id="transaction_category" name="transaction[category]">
<option selected disabled="category">category</option>
<option value="Personal Income">Personal Income</option>
<option value="Investment Income">Investment Income</option>
<option value="Food &amp; Drink">Food &amp; Drink</option>
<option value="Homeo">Home</option>
<option value="Travel">Travel</option>
<option value="Vehicle">Vehicle</option>
<option value="Financial &amp; Profession">Financial &amp; Profession</option>
<option value="Leisure">Leisure</option>
<option value="Education">Education</option>
<option value="Gadgets &amp; Devices">Gadgets &amp; Devices</option>
<option value="Clothes">Clothes</option>
<option value="Health">Health</option>
<option value="Personal Care">Personal Care</option>
<option value="Phone &amp; Internet">Phone &amp; Internet</option>
<option value="Holidays">Holidays</option>
<option value="Gambling">Gambling</option>
<option value="Pets">Pets</option>
<option value="Giving to others">Giving to others</option>
<option value="Other">Other</option>
</select>
</span>
<br>

<%= f.text_field :description, placeholder: "description" %>

<%= f.submit "Enter Transaction", class: "btn btn-large btn-primary" %>

<% end %>
</div>

