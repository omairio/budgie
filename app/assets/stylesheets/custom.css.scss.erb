@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";
@import "flat-ui";

#login {
	text-align: center;
	background-color:#1e7394;
	padding: 80px 0px;

	h1 {
		display: block;
		margin: auto;
		text-align: center;
	}

	input {
		display: block;
		margin: 0 auto;
		margin-top: 20px;
		margin-bottom: 20px;
		padding: 10px;
		font-size: 18px;
	}

	a {
		text-decoration: none;
	}

	#sign_in_button{
		display: block;
		margin: auto;
		text-decoration: none;
	}
}

#button {
	padding: 10px;
}

#header {
	padding: 10px;
	margin: 0;
	background-color:#1e7394;
}

#left {
	background: url('info_background.jpg');
	background-position: center;
}

.alert-success{
	margin: 0;
	border-radius: 0;
}

.float-left {
	float: left;
}

.float-right {
	float: right;
}
