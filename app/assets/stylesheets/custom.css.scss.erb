@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";
@import "flat-ui";

#login {
	text-align: center;
	background-color:#1e7394;
	padding: 80px 0px;

	h1 {
		display: block;
		margin: auto;
		text-align: center;
	}

	input {
		display: block;
		margin: 0 auto;
		margin-top: 20px;
		margin-bottom: 20px;
		padding: 10px;
		font-size: 18px;
	}

	a {
		text-decoration: none;
	}

	#sign_in_button{
		display: block;
		margin: auto;
		text-decoration: none;
	}
}

#buttons {
	padding: 10px;
}