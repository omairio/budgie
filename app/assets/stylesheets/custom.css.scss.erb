@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";
@import "flat-ui";

#main_well {
	margin-top: 20px;
	border-radius: 0px;
	text-align: center;

	h1 {
		display: block;
		margin: auto;
		text-align: center;
	}

	input {
		display: block;
		margin: 0 auto;
		margin-top: 20px;
		margin-bottom: 20px;
		padding: 10px;
		font-size: 18px;
	}

	a {
		text-decoration: none;
	}

	#sign_in_button{
		display: block;
		margin: auto;
		text-decoration: none;
	}

	.well {
		width: 95%;
		height: 95%;
		background-color:#1e7394;
		border: 0px;
	}
}

#debug {
	display: block;
}

#session-email {
	text-align: center;
}